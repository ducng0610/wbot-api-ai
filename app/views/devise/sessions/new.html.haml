.row
  .col-sm-4.col-sm-offset-4
    %h1.text-center Log in
    %hr/
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control'
      .form-group
        = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control'
      - if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label :remember_me
      .form-group
        = f.submit "Log in", class: "btn btn-primary btn-block btn-lg"
    /
      <div class="text-center">
      <haml:loud> render &amp;quot;devise/shared/links&amp;quot; </haml:loud>
      </div>
